{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"lib": ["esnext"],
		"sourceMap": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"strict": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"skipLibCheck": true
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules"]
}
